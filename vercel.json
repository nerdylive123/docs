{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run vercel-build",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/llms.txt",
      "dest": "/llms.txt",
      "status": 200,
      "headers": {
        "Content-Type": "text/plain; charset=utf-8"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/$1" 
    }
  ]
}
